				</dict>
			</options>
		</setup>
	</action>
	
	<action id="com.onecrayon.Snippets.script" category="actions.text.HTML/actions.snippets">
		<class>TEAforEspresso</class>
		<title>Script</title>
		<text-trigger>script</text-trigger>
