			<options>
				<dict>
					<key>default</key>
					<string><![CDATA[<meta name="${1:name}" content="${2:content}"$E_XHTML>]]></string>
				</dict>
			</options>
		</setup>
	</action>
	
	<action id="com.onecrayon.Snippets.refresh" category="actions.text.HTML/actions.snippets">
		<class>TEAforEspresso</class>
		<title>Meta Refresh</title>
		<text-trigger>refresh</text-trigger>
		<setup>
			<action>insert_snippet</action>
			<syntax-context>html, html punctuation.definition.begin</syntax-context>
			<options>
				<dict>
					<key>default</key>
