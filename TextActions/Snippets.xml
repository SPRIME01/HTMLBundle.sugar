				<dict>
					<key>default</key>
					<string><![CDATA[<style type="text/css" media="screen">
	$0
</style>]]></string>
				</dict>
			</options>
		</setup>
	</action>
	
	<action id="com.onecrayon.Snippets.table" category="actions.text.HTML/actions.snippets">
		<class>TEAforEspresso</class>
		<title>Table</title>
		<text-trigger>table</text-trigger>
		<setup>
			<action>insert_snippet</action>
			<syntax-context>html, html punctuation.definition.begin</syntax-context>
			<options>
				<dict>
					<key>default</key>
					<string><![CDATA[<table border="${1:0}"${2: cellspacing="${3:5}" cellpadding="${4:5}"}>
	<tr><th>${5:Header}</th></tr>
	<tr><td>${0:Data}</td></tr>
</table>]]></string>
				</dict>
			</options>
		</setup>
	</action>
	
	<action id="com.onecrayon.Snippets.textarea" category="actions.text.HTML/actions.snippets">
		<class>TEAforEspresso</class>
		<title>Textarea</title>
		<text-trigger>textarea</text-trigger>
		<setup>
			<action>insert_snippet</action>
			<syntax-context>html, html punctuation.definition.begin</syntax-context>
			<options>
				<dict>
					<key>default</key>
					<string><![CDATA[<textarea name="${1:name}" rows="${2:8}" cols="${3:40}">$0</textarea>]]></string>
				</dict>
			</options>
		</setup>
	</action>
	
	<action id="com.onecrayon.Snippets.title" category="actions.text.HTML/actions.snippets">
