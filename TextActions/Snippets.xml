			<options>
				<dict>
					<key>default</key>
					<string><![CDATA[<script type="text/javascript" charset="utf-8"${1: src="$2"}>$0</script>]]></string>
				</dict>
			</options>
		</setup>
	</action>
	
	<action id="com.onecrayon.Snippets.style" category="actions.text.HTML/actions.snippets">
		<class>TEAforEspresso</class>
		<title>Style</title>
		<text-trigger>style</text-trigger>
